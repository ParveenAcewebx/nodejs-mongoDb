{
    "openapi": "3.0.1",
    "info": {
        "version" : "1.0.1",
        "title": "Sale Report Manager APIs Document",
        "description": "your description here",
        "termsOfService": "",
        "contact": {
            "name": "Sales Report Manager",
            "email": "parveen@acewebx.com",
            "url": "https://acewebx.com/"
        }
    },
    "servers": [
        {
            "url": "https://sales-report-manager.herokuapp.com/api/v1.0.1",
            "description": "Production server"            
        },
        {
            "url": "http://localhost:8444/api/v1.0.1",
            "description": "Development server"            
        }
    ],
    "tags": [
        {
            "name": "Auth",
            "description": "Auth Opration"
        },
        {
          "name": "User",
          "description": "User Opration"
      }
    ],  
    "paths": {
      "/auth/login": {
        "post": {
          "tags": ["Auth"],
          "description": "Admin Signin Api",
          "operationId": "adminSignin",          
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "required": [
                    "email",
                    "password"
                  ],
                  "properties": {
                    "email": {
                      "type": "string",
                      "description": "User Email"
                    },
                    "password": {
                      "type": "string",
                      "description": "User Password"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Users were obtained"              
            },
            "400": {
              "description": "Missing parameters"              
            }
          }
        }
      },
      "/user/me": {
        "get": {
          "tags": ["Auth"],
          "description": "Get user object",
          "operationId": "userMe",          
          "responses": {
            "400": {
              "description": "Missing parameters"              
            }
          },
          "security": [
            {
              "jwt": []
            }
          ]
        }
      },
      "/user": {
        "post": {
          "tags": ["User"],
          "description": "Create new User",
          "operationId": "createNewUser",          
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "required": [
                    "name",
                    "email",
                    "password"
                  ],
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "User Name"
                    },
                    "email": {
                      "type": "string",
                      "description": "User Email"
                    },
                    "password": {
                      "type": "string",
                      "description": "User Password"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "400": {
              "description": "Missing parameters"              
            }
          }
        }
      }
    },
    "components": {
        "securitySchemes": {
          "jwt": {
            "name": "x-auth-token",
            "type": "apiKey",
            "scheme": "bearer",
            "in": "header",
            "bearerFormat": "JWT"
          }
        }
    }
}